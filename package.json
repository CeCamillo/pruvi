{
  "name": "pruvi",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @pruvi/db db:push",
    "db:studio": "turbo -F @pruvi/db db:studio",
    "db:generate": "turbo -F @pruvi/db db:generate",
    "db:migrate": "turbo -F @pruvi/db db:migrate",
    "db:start": "turbo -F @pruvi/db db:start",
    "db:watch": "turbo -F @pruvi/db db:watch",
    "db:stop": "turbo -F @pruvi/db db:stop",
    "db:down": "turbo -F @pruvi/db db:down",
    "db:seed": "turbo -F @pruvi/db db:seed",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "turbo check-types",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "prepare": "husky"
  },
  "dependencies": {
    "@pruvi/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@pruvi/config": "workspace:*",
    "@types/node": "^22.13.14",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.28.0"
}
